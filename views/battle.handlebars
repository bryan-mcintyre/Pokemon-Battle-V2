<section>
    <h2>Select a Pokemon SIIII</h2>
    <div>
        {{!-- Show your Pokemons from storage --}}
      {{!-- {{gallery}} --}}
      {{#each gallery }}
      <div class="card">
      <img src="{{picture}}">
      {{name}}
      {{level}}
      <p>Current HP:</p>
      {{pokemon_stat.current_hp}}
      <p>Attack:</p>
      {{pokemon_stat.attack}}
      <p>Defense:</p>
      {{pokemon_stat.defense}}
      <p>Abilities:</p>
      {{#each abilities as |ability|}}
      {{ability.name}}
      {{/each}}
      </div>
      
{{/each}}
    </div>

    {{!-- Battle Box --}}
    <div>
        <div> Selected Pokemon</div>
        <div> VS</div>
        <button id="generate-opponent-button" type="button" class="button">Generate Opponent
            Pok√©mon!</button>
