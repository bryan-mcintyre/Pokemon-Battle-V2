
  <main>
    <div class="field">
      <div class="control">
        <h2 class="page-title">Login</h2>
        <form id="login-form" class="login-form" action="/login" method="POST">
          <div class="control">
            <label for="email-login">Username:</label>
            <input class="input" type="text" id="email-login" name="email" />
          </div>
          <div class="control">
            <label for="password-login">Password:</label>
            <input class="input" type="password" id="password-login" name="password" />
          </div>
          <div class="control">
            <button class="button is-primary" type="submit">Login</button>
          </div>
        </form>
        <p id="signup-link">Don't have an account? <a href="#" onclick="showSignupForm()">Click here to sign up!</a></p>
        
        <form id="signup-form" class="signup-form" action="/signup" method="POST" style="display: none;">
          <div class="control">
            <label for="email-signup">Username:</label>
            <input class="input" type="text" id="email-signup" name="email" />
          </div>
          <div class="control">
            <label for="password-signup">Password:</label>
            <input class="input" type="password" id="password-signup" name="password" />
          </div>
          <div class="control">
            <label for="confirm-password-signup">Confirm Password:</label>
            <input class="input" type="password" id="confirm-password-signup" name="confirm-password" />
          </div>
          <div class="control">
            <button class="button is-primary" type="submit">Sign Up</button>
          </div>
          <p id="login-link">Already have an account? <a href="#" onclick="showLoginForm()">Click here to login!</a></p>
        </form>
      </div>
    </div>
  </main>
  
  <script src="/js/login.js"></script>
</body>

</html>